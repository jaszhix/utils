{
  "compilerOptions": {
    "incremental": true,
    "outDir": "build",
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "jsx": "react",
    "declaration": true,
    "declarationDir": "build/types",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": false,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "lib": [
      "es2018",
      "dom",
    ]
  },
  "include": [
    "src/**/*.ts"
  ]
}
